<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.virtualgraviton.cppfastcoding</id>
    <name>CppFastCoding</name>
    <vendor>virtualgraviton</vendor>

    <depends>com.intellij.modules.platform</depends>
    <actions>
        <action id="ShowMainWindow" class="cppFastCoding.action.InitToolWindowAction" text="ShowMainWindow"
                description="Show main window">
            <add-to-group group-id="MainMenu" anchor="last"/>
        </action>
    </actions>
    <projectListeners>
        <listener
                class="cppFastCoding.listener.SelectedFileListener"
                topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
        <listener
                class="cppFastCoding.listener.SaveActionListener"
                topic="cppFastCoding.listener.SaveActionNotifier"/>
        <listener
                class="cppFastCoding.listener.SaveFileListener"
                topic="cppFastCoding.listener.SaveFileNotifier"/>
        <listener
                class="cppFastCoding.window.mainWindow.mainWindowComp.ButtonPanel"
                topic="cppFastCoding.listener.RunFinishNotifier"/>
    </projectListeners>
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable displayName="CppFastCoding Settings" groupId="other"
                                 instance="cppFastCoding.window.settingWindow.CFCodingConfigurable"/>
        <toolWindow id="CppFastCodingPlugin" anchor="right"
                    factoryClass="cppFastCoding.window.mainWindow.MainToolWindow"/>
        <notificationGroup displayType="BALLOON" id="MyNoticeGroup"/>
    </extensions>

</idea-plugin>
